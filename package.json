{
  "name": "@wdk/wallet-evm",
  "version": "1.0.0-beta.1",
  "description": "A simple package to manage BIP-32 wallets for evm blockchains.",
  "main": "index.js",
  "type": "module",
  "types": "./types",
  "scripts": {
    "build:types": "rimraf *.d.ts **/*.d.ts; tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:integration:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration --coverage"
  },
  "exports": {
    ".": {
      "bare": "./bare.js",
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./package": {
      "default": "./package.json"
    }
  },
  "dependencies": {
    "@noble/curves": "1.9.2",
    "@noble/secp256k1": "2.2.3",
    "@wdk/wallet": "https://github.com/tetherto/wdk-wallet#develop",
    "bip39": "3.1.0",
    "ethers": "6.14.3",
    "resolve": "^1.22.10",
    "sodium-universal": "5.0.1",
    "bare-wdk-runtime": "2.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@nomicfoundation/hardhat-ethers": "3.0.9",
    "cross-env": "7.0.3",
    "eslint": "^9.33.0",
    "eslint-plugin-jsdoc": "^51.4.1",
    "hardhat": "2.24.2",
    "jest": "29.7.0",
    "rimraf": "6.0.1",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  }
}